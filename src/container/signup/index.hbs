{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{>back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Sign in</h1>

        <div class="form">
            <div class="form__item">
                {{>field action='signupForm.change' label='Mail' type='email' name='email' placeholder='Your mail'}}
                <span name="email" class="form__error">EroRR</span>
            </div>
            <div class="form__item">
                {{>field-password action='signupForm.change' label='Password'name='passwordAgain'
                placeholder='Password'}}
                <span name="passwordAgain" class="form__error">EroRR</span>
            </div>
            <div class="form__item">
                {{>field-password action='signupForm.change' label='Repeat the password again'name='repeatpass'
                placeholder='Repeat pass'}}
                <span name="repeatpass" class="form__error">EroRR</span>
            </div>
            <div class="form__item">
                {{>field-select action='signupForm.change' label='Role'name='role' placeholder='Choose' list=data.role}}
                <span name="Role" class="form__error">EroRR</span>
            </div>
            <div class="form__item">
                {{>field-checkbox action='signupForm.change' label='Are you agree?'name='isConfirm'}}
                <span name="isConfirm" class="form__error">EroRR</span>
            </div>
        </div>
        <button onclick="signupForm.submit()" class="button button--disabled" type="button">Sign in</button>
        <span class="alert alert--disabled"> Sorry, some trouble</span>
        <span class="link__prefix">Forgot the password?<a href="/login" class="link">Recovery</a></span>
    </form>
</div>

