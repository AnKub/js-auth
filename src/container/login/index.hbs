{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
	<header>
		{{> back-button}}
	</header>

	<form class="page__section">
		<h1 class="page__title">Login</h1>

		<div class="form">
			<div class="form__item">
				{{> field action="signupForm.change" label="Ел. адреса" type="email" name="email" placeholder="Ваш e-mail" }}
				<span name="email" class="form__error">Error</span>
			</div>
			<div class="form__item">
				{{> field-password action="signupForm.change" label="Пароль" name="password" placeholder="Введіть пароль" }}
				<span name="password" class="form__error">Error</span>
			</div>
		</div>

		<button onclick="signupForm.submit()" class="button button--disabled" type="button">In</button>

		<span class="alert alert--disabled">Attention, error!</span>

		<span class="link__prefix">Forgot the password?<a href="/recovery" class="link">Recovery</a></span>

	</form>
</div>

